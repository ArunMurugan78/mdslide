const NewSlideButton: FC<NewSlideButtonProps> = (props) => {
  return (
    <IconButton
      variant="outline"
      aria-label="Add new Slide"
      icon={<AddIcon />}
    />
  );
};

export const SlideNavigator: FC<SlideNavigatorProps> = (props) => {
  return (
    <Box p="20px" bg="#F4F4F2" width="100%" height="100%">
      <NewSlideButton />
    </Box>
  );
